<div>
  <%= image_tag @city.image, size: "200x100"%>
  <h1><%= @city.name %> </h1>
</div>
<h3>Posts about <%= @city.name %></h3>


<%= @posts _do  |post| %>
  <p>
    <%= post.title %> - <%= post.description %><%= link_to post_path(post) %>
  </p>
<% end %>

<% if false %>
<% @posts.each do |p| %> 
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
      <%= p.title %>
      <%= p.description %>
    </div>
  </div>
<% end %>
<% end %>